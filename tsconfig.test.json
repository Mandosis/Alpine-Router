{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": true,
    "outDir": ".ava"
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "src"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}